package tanks.scripts {	import tanks.tank.Tank	import flash.display.DisplayObject	import flash.utils.getQualifiedClassName	import flash.events.Event	import physics.pscript.PhysScript	import tanks.projectiles.Projectile		public class ProjScript extends PhysScript{		public var thisProjectile:Projectile		public var originalTank:Tank		public var projectileGraphics:Array				public function setProjectile(p:Projectile){thisProjectile = p}				public function setTank(t:Tank){originalTank = t}			public function ProjScript():void{}			override public function endScriptDefault():void{		if (projectileGraphics != null){			for (var i = 0; i < projectileGraphics.length ; i++)				thisProjectile.removeChild(projectileGraphics[i])				projectileGraphics[i] = null							}			endScript()			thisProjectile.destroyDefault()		}		public function addGraphic(graphic : DisplayObject):void{			if (projectileGraphics == null){projectileGraphics = new Array}			projectileGraphics.push(graphic)			thisProjectile.addChild(graphic)		}	}}