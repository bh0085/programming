package ct_code{		import flash.display.MovieClip	import flash.events.Event	import flash.events.MouseEvent		public class PtCharge extends MovieClip{		public var thisx:Number		public var thisy:Number		public var charge:Number;		public var graphic:MovieClip;		public var csystem:ChargeSystem;		public var sysindex:Number;		public var dragging:Boolean;				public function PtCharge(xpos:Number, ypos:Number, thischarge:Number,movieclip:MovieClip) {			thisx = xpos			thisy = ypos			charge = thischarge			graphic = movieclip		}		function drag(event:MouseEvent):void{			dragging = 1			graphic.startDrag(false)		}		function unclick(event:MouseEvent):void{			dragging = 0			graphic.stopDrag()		}		function enterNext(event:Event):void{		if (dragging) {			csystem.charges[sysindex].thisx = graphic.x + graphic.width/2			csystem.charges[sysindex].thisy = graphic.y + graphic.height/2			csystem.ischanged = true		}		}	}}