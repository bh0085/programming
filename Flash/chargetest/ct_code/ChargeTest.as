package ct_code {		import flash.display.Sprite	import flash.display.MovieClip	import flash.events.Event	import flash.display.DisplayObject		public class ChargeTest extends Sprite{				public var x1:Number;		public var y1:Number;		public var x2:Number;		public var y2:Number;		public var x3:Number;		public var y3:Number;		public var ptcharge1:PtCharge;		public var ptcharge2:PtCharge;		public var ptcharge3:PtCharge;				public var isupdated:Boolean;				public var lastchild:DisplayObject			public var chargesystem:ChargeSystem;				public function ChargeTest() {			isupdated = false						var ptchcharge4:PtCharge;			var charge4:chargered = new chargered()			charge4.x = 100			charge4.y = 10			var x4 = charge4.x + charge4.width/2			var y4 = charge4.y + charge4.height/2			var ptcharge4 = new PtCharge(x4,y4,+10,charge4)												x1 = charge1.x + charge1.width / 2			y1 = charge1.y + charge1.height/2						x2 = charge2.x + charge2.width/2			y2 = charge2.y + charge2.height/2						x3 = charge3.x + charge3.width / 2			y3 = charge3.y + charge3.height/2						ptcharge1 = new PtCharge(x1,y1, + 2,charge1)			ptcharge2 = new PtCharge(x2,y2, - 4,charge2)			ptcharge3 = new PtCharge(x3,y3, - 10, charge3)						chargesystem = new ChargeSystem(this)			chargesystem.pushCharge(ptcharge1)			chargesystem.pushCharge(ptcharge2)			chargesystem.pushCharge(ptcharge3)			chargesystem.pushCharge(ptcharge4)						this.addChild(charge4)						chargesystem.drawE()			lastchild = addChild(chargesystem.fieldlines)			this.addEventListener(Event.ENTER_FRAME,this.enterNext)					}		function enterNext(event:Event):void{			if(this.isupdated){			this.removeChild(lastchild)			lastchild = this.addChild(chargesystem.fieldlines)			isupdated = false			}		}	}}	