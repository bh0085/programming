package tanks.planets.planetscripts{	import tanks.planets.Planet	import physics.pscript.PhysScript	import flash.display.DisplayObject	import flash.utils.getQualifiedClassName		public class PlanetScript extends PhysScript{		public var thisPlanet:Planet		public var planetGraphics:Array				public function setPlanet(p:Planet){			thisPlanet = p		}					override public function endScriptDefault():void{		if (planetGraphics != null){			for (var i = 0; i < planetGraphics.length ; i++)				planetGraphics.removeChild(planetGraphics[i])				planetGraphics[i] = null			}			endScript()		}		public function addGraphic(graphic : DisplayObject):void{			if (planetGraphics == null){planetGraphics = new Array}			planetGraphics.push(graphic)			thisPlanet.addChild(graphic)		}		public function howManyOfThisScript():Number{			var num = 0			for ( var i = 0 ; i< thisTank.scripts.length ; i ++)				{					var className = flash.utils.getQualifiedClassName(thisPlanet.scripts[i]);					if (className == flash.utils.getQualifiedClassName(this)){num++ }				}			return num		}	}}					}	}