package tanks.projectiles{	import flash.display.Shape;	import paths.PhysOutline;	import tanks.scripts.BombScript	public class Bomb extends Projectile{		public function Bomb():void {			setMass(1)			setCharge(0)			thisOutline = PhysOutline.sphereOutline(5,8);			thisOutline.setObject(this);			setGraphic(thisOutline.drawShape(true,true));		}		override public function createScript():void {			thisScript = new BombScript();			thisScript.setExplosion(thisExplosion)			thisScript.setProjectile(this);			thisScript.setTank(thisTank);			thisScript.beginScript();		}		override public function collided():void {			thisScript.scriptDone = true;		}	}}				