package tanks.scripts{	import paths.PhysOutline	import flash.display.Shape	import tanks.projectiles.Bomb	import tanks.explosions.*	import tanks.projectiles.Projectile	public class FragmentExplosionScript extends ExplScript{			override public function advance(...args):void{			for(var i = 0 ; i < 2 ; i++){				var tank = thisExplosion.thisTank				var proj = new Bomb()				var expl = new StickyExplosion()				var angle = thisExplosion.initialAngle + Math.PI + (Math.random()- .5) * Math.PI/1.3				var power = 3				var explPower = thisExplosion.initialPower				var initXY = [thisExplosion.initialXY[0] + Math.cos(angle) * 30, thisExplosion.initialXY[1] + Math.sin(angle)* 30]				Projectile.initializeProjectile(proj,initXY,expl,tank,angle,power,explPower)							}			scriptDone = true									}	}}