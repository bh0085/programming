package tanks.scripts{					public class ExplScript extends PhysScript{		public var thisExplosion:Explosion		public var originalTank:Tank		public var explosionGraphics:Array				public function setExplosion(e:Explosion){thisExplosion = e}				public function setTank(t:Tank){originalTank = t}			override public function advance(...args):void{			if(frame == 1){				var eraseShape = PhysOutline.sphereOutline(80,20,[thisExplosion.x,thisExplosion.y])								var o = thisExplosion.thisTank.thisUniverse.objects								for(var i = 0 ; i < o.length ; i++){					if(thisExplosion.colType ==1){						if(o[i].eraseable){ o[i].eraseWith(eraseShape) }					} else {						if(o[i].eraseable){ o[i].unionWith(eraseShape) }											}															}			}			if(frame < 5){				var graphic = new Shape()								graphic.graphics.beginFill(Math.random()* 256  + Math.random() * Math.pow(256,2) + Math.random() *Math.pow(256,3))				var x0 = Math.random() * 20				var y0 = Math.random() * 20				var radius = Math.random() * 30				graphic.graphics.drawCircle(x0,y0,radius)				addGraphic(graphic)				}			if(frame < 5){				 graphic = new Shape()				uint				graphic.graphics.beginFill(Math.random()* 256  + Math.random() * Math.pow(256,2) + Math.random() *Math.pow(256,3))				 x0 = Math.random() * 20				 y0 = Math.random() * 20				 radius = Math.random() * 30				 graphic.alpha = .5				graphic.graphics.drawCircle(x0,y0,radius)				addGraphic(graphic)				}			if(frame <10){				var l = explosionGraphics.length				for ( i = 0; i < l ; i++){					explosionGraphics[i].width *= 1.4					explosionGraphics[i].height*= 1.4					}				}			if(frame >= 10){				 l = explosionGraphics.length				for ( i = 0; i < l ; i++){					explosionGraphics[i].width *= .9					explosionGraphics[i].height*= .9					explosionGraphics[i].alpha *= .5					}				}			if(frame <20){				 l = explosionGraphics.length				for ( i = 0; i < l ; i++){					explosionGraphics[i].x +=( Math.random() - .5) * 75					explosionGraphics[i].y +=( Math.random() - .5) * 75					}				}										if (frame == 20) {scriptDone = true}		}			override public function endScriptDefault():void{			if (explosionGraphics != null){				for (var i = 0; i < explosionGraphics.length ; i++)					thisExplosion.removeChild(explosionGraphics[i])					explosionGraphics[i] = null									}				endScript()				thisExplosion.destroyDefault()		}		public function addGraphic(graphic : DisplayObject):void{			if (explosionGraphics == null){explosionGraphics = new Array}			explosionGraphics.push(graphic)			thisExplosion.addChild(graphic)		}	}}