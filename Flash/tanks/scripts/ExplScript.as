package tanks.scripts{				import paths.PhysOutline			import physics.pscript.PhysScript	import tanks.tank.Tank	import tanks.explosions.Explosion	import flash.display.DisplayObject	import flash.events.Event	import flash.display.Shape	import physics.objects.PhysObject		public class ExplScript extends PhysScript{		public var thisExplosion:Explosion		public var originalTank:Tank		public var explosionGraphics:Array				public function setExplosion(e:Explosion){thisExplosion = e}				public function setTank(t:Tank){originalTank = t}			override public function advance(...args):void{			scriptDone = true		}			override public function endScriptDefault():void{			if (explosionGraphics != null){				for (var i = 0; i < explosionGraphics.length ; i++)					thisExplosion.removeChild(explosionGraphics[i])					explosionGraphics[i] = null									}				endScript()				thisExplosion.destroyDefault()		}		public function addGraphic(graphic : DisplayObject):void{			if (explosionGraphics == null){explosionGraphics = new Array}			explosionGraphics.push(graphic)			thisExplosion.addChild(graphic)		}	}}