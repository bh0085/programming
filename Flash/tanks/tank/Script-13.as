package tanks.tank{		public class ExplScript{			import tanks.tank.Tank	import tanks.tank.Explosion	import flash.display.DisplayObject	import flash.events.Event		public class ExplScript extends PhysScript{		public var thisExplosion:Explosion		public var originalTank:Tank		public var explosionGraphics:Array				public function setExplosion(e:Explosion){thisExplosion = e}				public function setTank(t:Tank){originalTank = t}			override public function endScriptDefault():void{		if (explosionGraphics != null){			for (var i = 0; i < explosionGraphics.length ; i++)				thisExplosion.removeChild(explosionGraphics[i])				explosionGraphics[i] = null							}			endScript()			thisExplosion.destroyDefault()		}		public function addGraphic(graphic : DisplayObject):void{			if (explosionGraphics == null){explosionGraphics = new Array}			explosionGraphics.push(graphic)			thisExplosion.addChild(graphic)		}	}}