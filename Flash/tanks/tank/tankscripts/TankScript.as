package tanks.tank.tankscripts {	import tanks.tank.Tank	import physics.pscript.PhysScript	import flash.display.DisplayObject	import flash.utils.getQualifiedClassName		public class TankScript extends PhysScript{		public var thisTank:Tank		public var tankGraphics:Array				public function setTank(t:Tank){			thisTank = t		}					override public function endScriptDefault():void{		if (tankGraphics != null){			for (var i = 0; i < tankGraphics.length ; i++)				thisTank.removeChild(tankGraphics[i])				tankGraphics[i] = null							}			endScript()		}		public function addGraphic(graphic : DisplayObject):void{			if (tankGraphics == null){tankGraphics = new Array}			tankGraphics.push(graphic)			thisTank.addChild(graphic)		}		public function howManyOfThisScript():Number{			var num = 0			for ( var i = 0 ; i< thisTank.scripts.length ; i ++)				{					var className = flash.utils.getQualifiedClassName(thisTank.scripts[i]);					if (className == flash.utils.getQualifiedClassName(this)){num++ }				}			return num		}	}}