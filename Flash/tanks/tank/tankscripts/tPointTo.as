package tanks.tank.tankscripts {		import tanks.tank.Tank		public class tPointTo extends TankScript{		var xyPointTo		public function tPointTo(xyPoint:Array){			xyPointTo= xyPoint			frame = 0		}		override public function advance():void{			var radVec = [xyPointTo[0] - thisTank.getX(), xyPointTo[1] - thisTank.getY()]			var rMag = Math.sqrt(Math.pow(radVec[0],2) + Math.pow(radVec[1],2))			var angleVec = Math.asin(radVec[1]/ rMag)				if (radVec[0] < 0) { angleVec = Math.PI - angleVec }			var angleDelta = angleVec - thisTank.angle			var search = true			 while( search ){				if(angleDelta < -1 * Math.PI) { angleDelta += Math.PI * 2 }				if(angleDelta > Math.PI) {angleDelta -= Math.PI*2 }				if(Math.abs(angleDelta) < Math.PI) {search = false}			}						var k = ( 20* angleDelta) / 10			thisTank.dampen([1,1,.75])			thisTank.torqueThrust(k)						if (frame  > 15) {scriptDone = true}		}	}}