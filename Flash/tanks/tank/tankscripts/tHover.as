package tanks.tank.tankscripts {	import flash.display.Shape		public class tHover extends TankScript{		override public function advance():void{						if(frame == 1) {				var shape = new Shape()				shape.graphics.beginFill(0x00BB00)				var dist =  25 + 50 * howManyOfThisScript()				var angle = 0				var dx = Math.cos(angle - Math.PI / 2) * dist				var dy = Math.sin(angle - Math.PI / 2) * dist				shape.graphics.drawCircle(dx,dy,15)				shape.alpha = .3				addGraphic(shape)			}									var units = thisTank.getUnits()			var unitPerp = [units[2],units[3]]			var unitPar  = [units[0],units[1]]											 			thisTank.dampen([1,1,.2])						var dampenY =   unitPerp[1]			var dampenX =   unitPerp[0]			//thisTank.dampen([dampenX,dampenY,1])						//thisTank.thrustUpwards( .005* (10 - frame)/ 10)						thisTank.cancelForces(.5)												if (frame  > 10) {scriptDone = true}					}	}}