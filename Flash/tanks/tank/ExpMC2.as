package tanks.tank{		import flash.events.Event	import flash.display.MovieClip		public class ExpMC2 extends MovieClip{		public var kill:Boolean = false		public var run:Boolean = true				public function ExpMC2(){			addEventListener(Event.ENTER_FRAME,expNextFrame)		}			public function expNextFrame(event:Event):void{			if(run)			if(kill){				parent.removeChild(this)				run = false				} else {				if (currentFrame < 7){alpha = currentFrame * .15} else {if (currentFrame < 13 ){alpha = (14 - currentFrame) *.15} else {kill = true}}			}		}	}}