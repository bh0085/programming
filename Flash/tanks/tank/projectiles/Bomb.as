package tanks.projectiles{	import flash.display.Shape;	import physics.projectile	import paths.PhysOutline;	public class Bomb extends Projectile{		public function Bomb():void {			setMass(1)			setCharge(0)			thisOutline = PhysOutline.sphereOutline(10,10);			thisOutline.setObject(this);			setGraphic(thisOutline.drawShape(0x999999,20));		}		override public function createScript():void {			thisScript = new BombScript();			thisScript.setExplosion(thisExplosion)			thisScript.setProjectile(this);			thisScript.setTank(thisTank);			thisScript.beginScript();		}		override public function collided():void {			thisScript.scriptDone = true;		}	}}				