package paths{	public class Bead {		public var node:Node		public var distAlong = 0		public function Bead(n:Node){			node = n		}				public function getXY(externalCoords:Boolean):Array{			var magAlong = Math.sqrt(Math.pow(next.x - x,2) + Math.pow(next.y - y,2))			var unitAlong = [(next.x - x)/magAlong , (next.y - y) / magAlong]			var localXY = [unitAlong[0] * distAlong, unitAlong[1] * distAlong]			if(externalCoords){				return localXY			} else {				return node.thisCtdOutline.externalCoords(localXY)			}					}			}	}