package actionscript{	import flash.display.Sprite	public class Continent extends GlooPlace{		var countries:Array = new Array()		static var continents:Array = new Array()				public static function resetFairs():void{			for( var i = 0 ; i < continents.length ; i++){				continents[i].resetFair()			}		}		public function Continent(nNew:String):void{			name = nNew			continents.push(this)			type = "Continent"		}				public function pushCountry(country:Country):void{			countries.push(country)			country.p = this		}		override public function getAirports():Array{			var a = new Array()			for(var i = 0 ; i < countries.length; i++){				a = a.concat(countries[i].getAirports())			}			return a		}		override public function draw():Sprite{			var s = new Sprite()			for(var i = 0 ; i < countries.length ; i++){				s.addChild(countries[i].draw())			}			return s		}	}}