package pong{		import flash.display.Shape	import flash.events.Event			public class Ball extends Shape {		var vx = 0		var vy = 0		//Ball Constructor draws the ball		public function Ball(){			graphics.lineStyle(4)			graphics.beginFill(0xFFFFFF)			graphics.drawCircle(0,0,12)			//addEventListener(Event.ENTER_FRAME,bNextFrame)		}		function bNextFrame(event:Event){			graphics.clear()			graphics.beginFill( Math.random() * 255+ Math.random() * 256* 256 + Math.random() * Math.pow(256,3))			graphics.drawCircle(5 * Math.random(),5*Math.random(),10 * Math.random()+ 5)		}	}}