import os

def make_eve(name, fname, eve_specs):
    old = open(os.path.join(name,os.path.join('data',fname)))
    lines = old.read()
    new_fname = os.path.join(name,os.path.join('data',fname+'.auto'))
    new = open(new_fname,'w')
    new.write(lines)
    close(old)
    close(new)
    return new_fname


